[app]

# Título do seu aplicativo
title = TaskCheck

# Nome do pacote
package.name = org.taskcheck

# Domínio do pacote (necessário para empacotamento android/ios)
package.domain = https://sites.google.com/view/andrejudatecnologia2023/p%C3%A1gina-inicial

# Diretório onde o código-fonte principal está localizado
source.dir = C:/Users/Micro/Documents/TaskCheck

# Requisitos do aplicativo
requirements = python3,kivy

# Orientação do aplicativo
orientation = portrait

# Versão do aplicativo
version = 1.0.0

# Arquiteturas Android para construir (arm64-v8a e armeabi-v7a são comuns)
android.archs = arm64-v8a, armeabi-v7a

# Permissões necessárias (por exemplo, acesso à internet)
android.permissions = INTERNET

# API de destino do Android (mínimo recomendado é 21)
android.api = 21

# Versão mínima do Android API (geralmente 21 ou superior)
android.minapi = 21

